<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">

    <!-- 引入 spring-boot 默认配置 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 从 Spring Boot 配置中获取应用名称 -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="refinex-platform"/>

    <!-- 从 Spring Boot 配置中获取日志路径 -->
    <springProperty scope="context" name="LOG_PATH" source="logging.file.path"
                    defaultValue="${user.home}/${APP_NAME}/logs"/>

    <!-- 定义日志格式 -->
    <property name="FILE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%tid] %-5level [%thread] %logger{36} : %sensitive%n"/>

    <!-- 定义敏感信息转换器(基于 Sensitive Logback) -->
    <conversionRule conversionWord="sensitive"
                    converterClass="com.github.houbb.sensitive.logback.converter.SensitiveLogbackConverter"/>
    <!-- 定义线程ID转换器(SkyWalking 的 TraceId 转换器) -->
    <conversionRule conversionWord="tid"
                    converterClass="org.apache.skywalking.apm.toolkit.log.logback.v1.x.LogbackPatternConverter"/>

    <!-- 定义控制台日志格式 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 定义 INFO 级别日志文件 -->
    <appender name="FILE_INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 指定日志文件路径 -->
        <file>${LOG_PATH}/application-info.log</file>

        <!-- 按照大小和时间滚动 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 归档文件命名模式 -->
            <fileNamePattern>${LOG_PATH}/archived/application-info.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- 每个日志文件最大大小 -->
            <maxFileSize>100MB</maxFileSize>
            <!-- 保存 15 天的日志 -->
            <maxHistory>15</maxHistory>
            <!-- 总日志文件最大大小 -->
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>

        <!-- 指定日志格式 -->
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 定义 ERROR 级别日志文件 -->
    <appender name="FILE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 指定日志文件路径 -->
        <file>${LOG_PATH}/application-error.log</file>

        <!-- 过滤 ERROR 级别日志 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <!-- 按照大小和时间滚动 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 归档文件命名模式 -->
            <fileNamePattern>${LOG_PATH}/archived/application-error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- 每个日志文件最大大小 -->
            <maxFileSize>100MB</maxFileSize>
            <!-- 保存 30 天的日志 -->
            <maxHistory>30</maxHistory>
            <!-- 总日志文件最大大小 -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>

        <!-- 指定日志格式 -->
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 定义异步 INFO 级别日志文件 -->
    <appender name="ASYNC_INFO" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 队列满时是否阻塞 -->
        <neverBlock>true</neverBlock>
        <!-- 队列大小 -->
        <queueSize>2048</queueSize>
        <!-- 队列满时丢弃的日志条数阈值 -->
        <discardingThreshold>20</discardingThreshold>
        <!-- 指定日志文件 -->
        <appender-ref ref="FILE_INFO"/>
    </appender>

    <!-- 定义异步 ERROR 级别日志文件 -->
    <appender name="ASYNC_ERROR" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 队列满时是否阻塞 -->
        <neverBlock>true</neverBlock>
        <!-- 队列大小 -->
        <queueSize>1024</queueSize>
        <!-- 队列满时丢弃的日志条数阈值 -->
        <discardingThreshold>0</discardingThreshold>
        <!-- 指定日志文件 -->
        <appender-ref ref="FILE_ERROR"/>
    </appender>

    <!-- 开发环境日志配置 -->
    <springProfile name="dev,local">
        <!-- 输出 cn.hollis.nft 包下的 DEBUG 级别日志 -->
        <logger name="cn.hollis.nft" level="DEBUG"/>
        <!-- 输出 cn.refinex 包下的 DEBUG 级别日志 -->
        <logger name="cn.refinex" level="DEBUG"/>

        <!-- 输出根包下的 INFO 级别日志 -->
        <root level="INFO">
            <!-- 输出到控制台 -->
            <appender-ref ref="CONSOLE"/>
            <!-- 输出到 INFO 文件 -->
            <appender-ref ref="ASYNC_INFO"/>
            <!-- 输出到 ERROR 文件 -->
            <appender-ref ref="ASYNC_ERROR"/>
        </root>
    </springProfile>

    <!-- 生产、测试、预发布环境日志配置 -->
    <springProfile name="prod,test,pre">
        <!-- 输出 cn.hollis.nft 包下的 INFO 级别日志 -->
        <logger name="cn.hollis.nft" level="INFO"/>
        <!-- 输出 cn.refinex 包下的 INFO 级别日志 -->
        <logger name="cn.refinex" level="INFO"/>

        <!-- 输出根包下的 INFO 级别日志 -->
        <root level="INFO">
            <!-- 输出到控制台 -->
            <appender-ref ref="CONSOLE"/>
            <!-- 输出到 INFO 文件 -->
            <appender-ref ref="ASYNC_INFO"/>
            <!-- 输出到 ERROR 文件 -->
            <appender-ref ref="ASYNC_ERROR"/>
        </root>
    </springProfile>

</configuration>